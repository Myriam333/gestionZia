{% extends 'base2.html.twig' %}

{% form_theme formInscription 'bootstrap_4_layout.html.twig' %}

{% block body %} 
{{ form_start(formInscription) }}

<label for="username">Nom Prénom</label>
{{ form_widget(formInscription.username, { 'label': 'Nom Prénom' }) }}<br>
{{ form_row(formInscription.email, { 'label': 'Adresse email' }) }}
{{ form_row(formInscription.password, { 'label': 'Mot de passe' }) }}
{{ form_row(formInscription.confirm_password, { 'label': 'Confirmer le mot de passe' }) }}
<button type="submit" class="btn btn-secondary btn-lg btn-block">S'inscrire</button>

{{ form_end(formInscription) }}
{% endblock %}